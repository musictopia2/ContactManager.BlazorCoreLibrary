@inherits MobileContactManagerComponentBase
@if (DataContext is null)
{
    return;
}
@if (DataContext.ContactChosen is null)
{
    return;
}
<div>
    <span style="font-weight: bold">
        Name:
    </span>
    @DataContext.ContactChosen.DisplayName
</div>
<GridTwoColumnUnlimited MaxContent="false">
    @foreach (var item in DataContext.ContactChosen.PhoneNumbers)
    {
        <div>
            @GetDisplay(item.PhoneCategory)
        </div>
        <div>
            <BootstrapPrimaryButton OnClick="() => DataContext.MakePhoneCall(item)" Style="width: 90%;" FontSize="2rem">
                @item.PhoneNumber
            </BootstrapPrimaryButton>
        </div>
    }
</GridTwoColumnUnlimited>
<GridTwoColumnUnlimited>
    <LabelPairComponent BoldHeader="true"
                        HeaderText="Email"
                        MainText="@DataContext.ContactChosen.EmailAddress" UseGrid="true" />
    <LabelPairComponent BoldHeader="true"
                        HeaderText="Street Address"
                        MainText="@DataContext.ContactChosen.StreetAddress" UseGrid="true" />
    <LabelPairComponent BoldHeader="true"
                        HeaderText="City"
                        MainText="@DataContext.ContactChosen.City" UseGrid="true" />
    <LabelPairComponent BoldHeader="true"
                        HeaderText="State"
                        MainText="@DataContext.ContactChosen.State" UseGrid="true" />
    <LabelPairComponent BoldHeader="true"
                        HeaderText="Postal Code"
                        MainText="@DataContext.ContactChosen.PostalCode" UseGrid="true" />

</GridTwoColumnUnlimited>